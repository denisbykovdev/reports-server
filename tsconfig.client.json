{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types",
      "client/@types"
    ]
  },
  "include": [
    "client/**/*",
    ".eslintrc.json"
  ],
  "exclude": [
    "node_modules",
    ".prettierrc",
    "dist",
    "server"
  ]
}